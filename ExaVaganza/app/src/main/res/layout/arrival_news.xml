<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id_arr"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"

    cardview:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textview_news"
                android:layout_width="312dp"
                android:layout_height="44dp"
                android:text="  NAME   posted a photo"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="31dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/dots" />

        </LinearLayout>


        <TextView
            android:id="@+id/textview_news_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text=" Date time here"/>

        <ImageView
            android:id="@+id/imageview_news"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textview_news_hash"
            android:text=" HASH TAGS"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_news_likes"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:src="@drawable/like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>


            <ImageView
                android:src="@drawable/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="80dp"/>

            <ImageView
                android:src="@drawable/comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="100dp"/>



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>